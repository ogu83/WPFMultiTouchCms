                                <MenuItem Header="36" Click="btnChangeNavFontSize_Click" />
                            </MenuItem>
                            <MenuItem Header="Font Tipi" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/FontType.png" />
                                </MenuItem.Icon>
                                <ListBox Background="Transparent" BorderThickness="0" 
                                         ItemsSource="{Binding}" ItemTemplate="{StaticResource fontFamilyData}" DataContext="{StaticResource familyCollection}" 
                                         SelectionChanged="btnNavFontChange_Click" />
                            </MenuItem>
                            <MenuItem Header="Font Rengi" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Colors.png" />
                                </MenuItem.Icon>
                                <ListBox Background="Transparent" BorderThickness="0" 
                                         ItemsSource="{Binding Source={StaticResource colorPropertiesOdp}}" DisplayMemberPath="Name" SelectedValuePath="Name" 
                                         SelectionChanged="btnNavFontColorChange_Click"/>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Pozisyon" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Position.png" />
                                </MenuItem.Icon>
                                <RadioButton Content="Yukarı"   IsChecked="{Binding IsNavMenuPositionTop}" />
                                <RadioButton Content="Sola"     IsChecked="{Binding IsNavMenuPositionLeft}" />
                                <RadioButton Content="Sağa"     IsChecked="{Binding IsNavMenuPositionRight}" />
                                <RadioButton Content="Aşağı"    IsChecked="{Binding IsNavMenuPositionBottom}"  />
                            </MenuItem>
                            <MenuItem Header="İçerik Pozisyon" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/AlignCenter.png" />
                                </MenuItem.Icon>
                                <RadioButton Content="Sola"     IsChecked="{Binding IsNavMenuContentLeft}" />
                                <RadioButton Content="Ortala"   IsChecked="{Binding IsNavMenuContentCenter}" />
                                <RadioButton Content="Sağa"     IsChecked="{Binding IsNavMenuContentRight}" />
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Dosya" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Files-icon.png" />
                                </MenuItem.Icon>
                                <MenuItem Header="Kaydet" Click="btnSave_Click">
                                    <MenuItem.Icon>
                                        <Image Height="64" Source="/USM_Presenter;component/images/SaveFile.png" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Salt Okunur Kaydet" Click="btnSaveReadOnly">
                                    <MenuItem.Icon>
                                        <Image Height="64" Source="/USM_Presenter;component/images/SaveReadOnly.png" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Aç" Click="btnOpen_Click">
                                    <MenuItem.Icon>
                                        <Image Height="64" Source="/USM_Presenter;component/images/OpenFile.png" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="Muzik" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Music-icon.png" />
                                </MenuItem.Icon>
                                <MenuItem Header="Ekle" Click="btnMusicAdd_Click">
                                    <MenuItem.Icon>
                                        <Image Height="64" Source="/USM_Presenter;component/images/Add.png" />
                                    </MenuItem.Icon>
                                </MenuItem>
