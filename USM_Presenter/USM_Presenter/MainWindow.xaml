                                </Grid>
                            </MenuItem.Header>
                        </MenuItem>
                        <Separator />
                        <MenuItem x:Name="btnChangeBackgroundPicture" Header="Arka Plan Değiştir" IsEnabled="{Binding EditMode, Mode=OneWay}" 
