                                                    <MenuItem.Header>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="Genişlik"></TextBlock>
                                                            <TextBox Text="{Binding ButtonWidth, Mode=TwoWay}" Grid.Row="1" />
                                                        </Grid>
                                                    </MenuItem.Header>
                                                </MenuItem>
                                                <MenuItem>
                                                    <MenuItem.Icon>
                                                        <Image Height="64" Source="/USM_Presenter;component/images/Height.png" />
                                                    </MenuItem.Icon>
                                                    <MenuItem.Header>
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                            </Grid.RowDefinitions>
                                                            <TextBlock Text="Yükseklik"></TextBlock>
                                                            <TextBox Text="{Binding ButtonHeight, Mode=TwoWay}" Grid.Row="1" />
                                                        </Grid>
                                                    </MenuItem.Header>
                                                </MenuItem>
                                            </MenuItem>
                                            <Separator />
                                            <MenuItem Header="Sayfayı Sil" IsEnabled="{Binding Parent.EditMode, Mode=OneWay}" Tag="{Binding PrimaryID, Mode=OneWay}" Click="btnDeletePage_Click">
                                                <MenuItem.Icon>
                                                    <Image Height="64" Source="/USM_Presenter;component/images/removePage.png" />
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Button.ContextMenu>
                                </Button>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <Grid x:Name="grdThumbnail" RenderTransformOrigin="0.5,0.5" Opacity="0" ContextMenuService.IsEnabled="{Binding NotReadOnly, Mode=OneWay}"
                      Grid.Column="{Binding ThumbGridCol}" Grid.Row="{Binding ThumbGridRow}" Visibility="Collapsed">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <Grid.ContextMenu>
                        <ContextMenu>
                            <MenuItem StaysOpenOnClick="True">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Password.png" />
                                </MenuItem.Icon>
                                <MenuItem.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <PasswordBox helpers:PasswordBoxAssistant.BindPassword="True" helpers:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <CheckBox Content="Düzenleme Modu" IsChecked="{Binding EditMode}" IsEnabled="{Binding EditModeButtonEnabled, Mode=OneWay}" Grid.Row="1" />
                                    </Grid>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem Header="Pozisyon" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/Position.png" />
                                </MenuItem.Icon>
                                <RadioButton Content="Yukarı"   IsChecked="{Binding IsThumbPositionTop}" />
                                <RadioButton Content="Sola"     IsChecked="{Binding IsThumbPositionLeft}" />
                                <RadioButton Content="Sağa"     IsChecked="{Binding IsThumbPositionRight}" />
                                <RadioButton Content="Aşağı"    IsChecked="{Binding IsThumbPositionBottom}"  />
                            </MenuItem>
                            <MenuItem Header="Resim Ekle" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnAddImage_Click">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/AddImage.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Video Ekle" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnAddVideo_Click">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/AddVideo.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Tümünü Sil" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnDeleteAllElements_Click">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/removePage.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Grid.ContextMenu>
                    <Border BorderThickness="5" Background="#40000000" CornerRadius="20" RenderTransformOrigin="0.5,0.5">
                        <Grid Margin="8">
                            <ListView ItemsSource="{Binding SelectedPage.Elements}" Background="Transparent" BorderThickness="0">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel IsItemsHost="True" Orientation="{Binding ThumbOrientation}" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Button Click="btnElement_Click" Style="{DynamicResource ImageButton}" Tag="{Binding PrimaryID, Mode=OneWay}" IsEnabled="{Binding IsNotOnCanvas}" ContextMenuService.IsEnabled="{Binding Parent.Parent.NotReadOnly, Mode=OneWay}">
                                            <Button.Background>
                                                <ImageBrush ImageSource="{Binding Path}" Stretch="Fill" />
                                            </Button.Background>
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem StaysOpenOnClick="True">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/Password.png" />
                                                        </MenuItem.Icon>
                                                        <MenuItem.Header>
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <PasswordBox helpers:PasswordBoxAssistant.BindPassword="True" helpers:PasswordBoxAssistant.BoundPassword="{Binding Parent.Parent.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                <CheckBox Content="Düzenleme Modu" IsChecked="{Binding Parent.Parent.EditMode}" IsEnabled="{Binding Parent.Parent.EditModeButtonEnabled, Mode=OneWay}" Grid.Row="1" />
                                                            </Grid>
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem Header="Pozisyon" IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/Position.png" />
                                                        </MenuItem.Icon>
                                                        <RadioButton Content="Yukarı"   IsChecked="{Binding Parent.Parent.IsThumbPositionTop}" />
                                                        <RadioButton Content="Sola"     IsChecked="{Binding Parent.Parent.IsThumbPositionLeft}" />
                                                        <RadioButton Content="Sağa"     IsChecked="{Binding Parent.Parent.IsThumbPositionRight}" />
                                                        <RadioButton Content="Aşağı"    IsChecked="{Binding Parent.Parent.IsThumbPositionBottom}"  />
                                                    </MenuItem>
                                                    <MenuItem Header="Resim Ekle" IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}" Click="btnAddImage_Click">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/AddImage.png" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Video Ekle" IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}" Click="btnAddVideo_Click">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/AddVideo.png" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Sil" IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}" Tag="{Binding PrimaryID, Mode=OneWay}" Click="btnDeleteElement_Click">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/RemoveImage.png" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}" Visibility="{Binding Path=IsVideo, Converter={StaticResource BooleanToVisibilityConverter1}}">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/StartMovie.png" />
                                                        </MenuItem.Icon>
                                                        <MenuItem.Header>
                                                            <CheckBox Content="Otomatik Başlat" IsChecked="{Binding AutoStart, Mode=TwoWay}" />
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                    <MenuItem Header="Tümünü Sil" IsEnabled="{Binding Parent.Parent.EditMode, Mode=OneWay}" Click="btnDeleteAllElements_Click">
                                                        <MenuItem.Icon>
                                                            <Image Height="64" Source="/USM_Presenter;component/images/RemoveImage.png" />
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                        </Button>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </Grid>

                <usm:TouchRulerCanvas x:Name="TouchCanvas" IsRemoveOnThrowOut="True" thrownOut="TouchCanvas_OnThrownOut" Grid.RowSpan="3" Grid.ColumnSpan="3" 
                                      IsTranslateDisabled="{Binding ElementName=btnTranslate, Path=IsNotChecked, Mode=OneWay}" 
                                      IsRotateDisabled="{Binding ElementName=btnRotate, Path=IsNotChecked, Mode=OneWay}" 
                                      IsScaleDisabled="{Binding ElementName=btnScale, Path=IsNotChecked, Mode=OneWay}" />

                <Grid x:Name="grdSlideShow" Grid.RowSpan="3" Grid.ColumnSpan="3" 
                      TouchDown="grdSlideShow_TouchDown" MouseDown="grdSlideShow_MouseDown"
                      DataContext="{Binding SlideShow}" Visibility="{Binding Enabled, Converter={StaticResource BooleanToVisibilityConverter1}}">
                    <Grid.Background>
                        <RadialGradientBrush Center="0.5,0.5" GradientOrigin="0.5,0.5">
                            <GradientStop Color="#FF000035" />
                            <GradientStop Color="Black" Offset="1.5" />
                        </RadialGradientBrush>
                    </Grid.Background>
                    <Image x:Name="slide" Source="{Binding CurrentImage, Mode=OneWay}" Margin="10" />
                </Grid>

            </Grid>

        </Grid>

    </Viewbox>
</Window>
