                                <MenuItem Header="20" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="22" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="24" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="26" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="28" Click="btnChangePageFontSize_Click" />
