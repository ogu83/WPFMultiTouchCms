                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/RotateTransform.png" />
                                </MenuItem.Icon>
                                <RadioButton Content="Yatay" IsChecked="{Binding PagesOrientationHorizontal, Mode=TwoWay}" />
                                <RadioButton Content="Düşey" IsChecked="{Binding PagesOrientationVertical, Mode=TwoWay}" />
                            </MenuItem>
                        </MenuItem>
                    </ContextMenu>
                </Grid.ContextMenu>

