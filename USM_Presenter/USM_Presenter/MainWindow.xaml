                                         SelectionChanged="btnPageFontColorChange_Click"/>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Hizalama">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/AlignCenter.png" />
                                </MenuItem.Icon>
                                <RadioButton Content="Sol-Üst" IsChecked="{Binding AlignPagesPanelLeftUp, Mode=TwoWay}" />
