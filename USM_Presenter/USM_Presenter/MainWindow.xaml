                                <RadioButton Content="Sağ-Üst" IsChecked="{Binding AlignPagesPanelRightUp, Mode=TwoWay}" />
                                <Separator />
                                <RadioButton Content="Sol-Orta" IsChecked="{Binding AlignPagesPanelLeftMid, Mode=TwoWay}" />
                                <RadioButton Content="Orta-Orta" IsChecked="{Binding AlignPagesPanelMidMid, Mode=TwoWay}" />
                                <RadioButton Content="Sağ-Orta" IsChecked="{Binding AlignPagesPanelRightMid, Mode=TwoWay}" />
                                <Separator />
                                <RadioButton Content="Sol-Alt" IsChecked="{Binding AlignPagesPanelLeftDown, Mode=TwoWay}" />
                                <RadioButton Content="Orta-Alt" IsChecked="{Binding AlignPagesPanelMidDown, Mode=TwoWay}" />
                                <RadioButton Content="Sağ-Alt" IsChecked="{Binding AlignPagesPanelRightDown, Mode=TwoWay}" />
                            </MenuItem>
