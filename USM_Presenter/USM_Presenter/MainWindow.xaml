                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="15*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
