                                    <Image Height="64" Source="/USM_Presenter;component/images/pageswap.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Font Büyüklüğü" >
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/FontSize.png" />
                                </MenuItem.Icon>
                                <MenuItem Header="10" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="12" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="14" Click="btnChangePageFontSize_Click" />
                                <MenuItem Header="16" Click="btnChangePageFontSize_Click" />
