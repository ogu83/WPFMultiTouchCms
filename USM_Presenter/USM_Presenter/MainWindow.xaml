                                    <MenuItem x:Name="btnNav6ChangePicture" Header="Resmi Değiştir" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnChangePicture_Click">
                                        <MenuItem.Icon>
                                            <Image Height="64" Source="/USM_Presenter;component/images/AddImage.png" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <helpers:ExtendedToggleButton x:Name="btnTranslate" Visibility="{Binding Path=TranslateButtonVisible, Converter={StaticResource BooleanToVisibilityConverter1}}" ContextMenuService.IsEnabled="{Binding NotReadOnly, Mode=OneWay}"
