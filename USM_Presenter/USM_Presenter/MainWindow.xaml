                                <ImageBrush ImageSource="{Binding Nav6Image}" Stretch="Uniform" />
                            </Button.Background>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem StaysOpenOnClick="True">
                                        <MenuItem.Icon>
                                            <Image Height="64" Source="/USM_Presenter;component/images/Password.png" />
                                        </MenuItem.Icon>
                                        <MenuItem.Header>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <PasswordBox helpers:PasswordBoxAssistant.BindPassword="True" helpers:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                <CheckBox Content="Düzenleme Modu" IsChecked="{Binding EditMode}" IsEnabled="{Binding EditModeButtonEnabled, Mode=OneWay}" Grid.Row="1" />
                                            </Grid>
                                        </MenuItem.Header>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem IsEnabled="{Binding EditMode, Mode=OneWay}">
                                        <MenuItem.Icon>
                                            <Image Height="64" Source="/USM_Presenter;component/images/edit.png" />
                                        </MenuItem.Icon>
                                        <MenuItem.Header>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="İçeriği Değiştir" />
