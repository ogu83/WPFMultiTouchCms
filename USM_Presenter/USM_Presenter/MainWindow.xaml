                            </MenuItem.Header>
                        </MenuItem>
                        <Separator />
                        <MenuItem Header="Sayfalar" IsEnabled="{Binding EditMode, Mode=OneWay}">
                            <MenuItem.Icon>
                                <Image Height="64" Source="/USM_Presenter;component/images/Pages.png" />
