                                    <MenuItem.Icon>
                                        <Image Height="64" Source="/USM_Presenter;component/images/Remove.png" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Hakkında" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnAbout_Click">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/about.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Çıkış" IsEnabled="{Binding EditMode, Mode=OneWay}" Click="btnExit_Click">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/exit.png" />
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Grid.ContextMenu>

                    <MediaElement x:Name="mediaMusic" MediaEnded="mediaMusic_MediaEnded" Source="{Binding Music, Mode=OneWay}" Volume="{Binding Volume, Mode=OneWay}" Visibility="Hidden" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>

                    <WrapPanel HorizontalAlignment="{Binding NavHAlignment}" VerticalAlignment="{Binding NavVAlignment}">

