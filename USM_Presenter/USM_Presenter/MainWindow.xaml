                                    <Image Height="64" Source="/USM_Presenter;component/images/Buttons.png" />
                                </MenuItem.Icon>
                                <CheckBox Content="{Binding NavButton5_Content, Mode=OneWay}" IsChecked="{Binding NavButton5_Visibility, Mode=TwoWay}" />
                                <CheckBox Content="{Binding NavButton2_Content, Mode=OneWay}" IsChecked="{Binding NavButton2_Visibility, Mode=TwoWay}" />
                                <CheckBox Content="{Binding NavButton3_Content, Mode=OneWay}" IsChecked="{Binding NavButton3_Visibility, Mode=TwoWay}" />
                                <CheckBox Content="{Binding NavButton4_Content, Mode=OneWay}" IsChecked="{Binding NavButton4_Visibility, Mode=TwoWay}" />
                                <CheckBox Content="{Binding NavButton7_Content, Mode=OneWay}" IsChecked="{Binding NavButton7_Visibility, Mode=TwoWay}" />
                                <CheckBox Content="Volume Slider" IsChecked="{Binding VolumeSliderVisibility, Mode=TwoWay}" />
                                <CheckBox Content="Kaydırma" IsChecked="{Binding TranslateButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="Döndürme" IsChecked="{Binding RotateButtonVisible, Mode=TwoWay}" />
                                <CheckBox Content="Boyutlandırma" IsChecked="{Binding ScaleButtonVisible, Mode=TwoWay}" />
                            </MenuItem>
                            <Separator />
                            <MenuItem Header="Font Büyüklüğü" IsEnabled="{Binding EditMode, Mode=OneWay}">
                                <MenuItem.Icon>
                                    <Image Height="64" Source="/USM_Presenter;component/images/FontSize.png" />
                                </MenuItem.Icon>
                                <MenuItem Header="10" Click="btnChangeNavFontSize_Click" />
